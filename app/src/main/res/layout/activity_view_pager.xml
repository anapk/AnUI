<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.anline.ui.viewpager.ViewPagerActivity">
    <cn.anline.ui.viewpager.view.ViewPagerIndicator
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:id="@+id/id_indicator">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="短信"
            android:textSize="16sp"
            android:textColor="#CCFFFF"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="收藏"
            android:textSize="16sp"
            android:textColor="#CCFFFF"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="推荐"
            android:textSize="16sp"
            android:textColor="#CCFFFF"
            />

    </cn.anline.ui.viewpager.view.ViewPagerIndicator>

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:id="@+id/id_viewpager1"
        android:layout_height="0dp"></android.support.v4.view.ViewPager>

</LinearLayout>
